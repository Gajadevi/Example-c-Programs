#include <stdio.h>

float calculateBill(float a, float b) {
    return a + b;
}

int main() {
    float p1, p2;

    printf("Enter price of item 1: ");
    scanf("%f", &p1);

    printf("Enter price of item 2: ");
    scanf("%f", &p2);

    printf("Total Bill = %.2f", calculateBill(p1, p2));

    return 0;
}
