#include <stdio.h>

struct bank {
    int accNo;
    char name[20];
    float balance;
};

int main() {
    struct bank b;

    printf("Enter account number: ");
    scanf("%d", &b.accNo);

    printf("Enter name: ");
    scanf("%s", b.name);

    printf("Enter balance: ");
    scanf("%f", &b.balance);

    printf("\nBank Details:\n");
    printf("Account No: %d\nName: %s\nBalance: %.2f",
           b.accNo, b.name, b.balance);

    return 0;
}
